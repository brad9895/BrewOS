@model IEnumerable<BrewOS.Models.Beers.Beer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._Recipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ABV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RackDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KegDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitalGravity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalGravity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Recipe.RecipeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ABV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrewDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RackDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KegDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InitalGravity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalGravity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BeerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BeerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BeerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
