@model BrewOS.Models.UserAccounts.User

@{
    ViewData["Title"] = "Sign-In";

}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Account Information</th>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => m.ContactInfo.FirstName)
            </td>
            <td> </td>
            <td>@Html.TextBoxFor(m => m.ContactInfo.LastName)</td>
        </tr>
        <tr>
            <td>PhoneNumber: </td>
            <td>
                @Html.TextBoxFor(m => m.ContactInfo.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td>Address: </td>
            <td>
                @Html.TextBoxFor(m => m.ContactInfo.Address)
            </td>
        </tr>
        @*<tr>
                <td>City: </td>
                <td>
                    @Html.TextBoxFor(m => m.City)
                </td>
            </tr>*@
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}