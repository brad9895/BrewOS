@model BrewOS.Models.Beers.Recipe

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Style)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Style.StyleName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TargetGravity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TargetGravity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MashingTemp)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MashingTemp)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SuggestedFermTemp)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SuggestedFermTemp)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GrainBill)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.grain.GrainType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>

                    <td>
                        <a asp-controller="GrainRecipeItem"
                           asp-action="Edit"
                           asp-route-id="@item.ID">Edit</a> |
                        <a asp-controller="GrainRecipeItem"
                           asp-action="Details"
                           asp-route-id="@item.ID">Details</a> |
                        <a asp-controller="GrainRecipeItem"
                           asp-action="Delete"
                           asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RecipeID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
